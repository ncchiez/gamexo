<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_CENTER" prefHeight="207.0" prefWidth="200.0" spacing="10.0" stylesheets="@../stylesheet/appview.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="username" prefHeight="35.0" prefWidth="200.0" promptText="Username" styleClass="input-box" />
      <PasswordField fx:id="password" prefHeight="35.0" prefWidth="200.0" promptText="Password" styleClass="input-box" />
      <Button mnemonicParsing="false" onAction="#clickLogin" prefHeight="35.0" prefWidth="200.0" styleClass="blue-button" text="Log in">
         <font>
            <Font name=".VnArial Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button mnemonicParsing="false" text="Forgotten password?">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name=".VnArial" size="12.0" />
         </font>
         <styleClass>
            <String fx:value="trans-button" />
            <String fx:value="blue-text" />
         </styleClass>
      </Button>
      <Line endX="100.0" startX="-100.0" stroke="#acacac" />
      <Button mnemonicParsing="false" onAction="#clickSignup" styleClass="gray-button" text="Create new account">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name=".VnArial" size="12.0" />
         </font>
      </Button>
   </children>
</fx:root>
