<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_CENTER" prefHeight="302.0" prefWidth="201.0" spacing="10.0" stylesheets="@../stylesheet/appview.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="username" prefHeight="35.0" prefWidth="200.0" promptText="Username" styleClass="input-box" />
      <PasswordField fx:id="password" prefHeight="35.0" prefWidth="200.0" promptText="Password" styleClass="input-box" />
      <PasswordField fx:id="comfirmPassword" prefHeight="35.0" prefWidth="200.0" promptText="Confirm Password" styleClass="input-box" />
      <Line endX="100.0" startX="-100.0" stroke="#acacac">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin></Line>
      <TextField fx:id="name" prefHeight="35.0" prefWidth="200.0" promptText="Name" styleClass="input-box" />
      <TextField fx:id="email" prefHeight="35.0" prefWidth="200.0" promptText="Email" styleClass="input-box" />
      <Button mnemonicParsing="false" onAction="#clickCreateAccount" prefHeight="35.0" prefWidth="200.0" styleClass="green-button" text="Create new account">
         <font>
            <Font name=".VnArial Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</fx:root>
